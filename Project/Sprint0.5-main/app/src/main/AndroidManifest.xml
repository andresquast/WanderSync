<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WanderSync"
        tools:targetApi="31">
        <activity
            android:name=".views.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.TripsListActivity"
            android:exported="false"
            android:label="My Trips"
            android:theme="@style/Theme.WanderSync" />
        <!-- Other activities with theme added -->
        <activity
            android:name=".views.SplashPage"
            android:exported="true"
            android:theme="@style/Theme.WanderSync">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.CreateAccountPage"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.LoginPage"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.DestinationsPage"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.DiningEstablishmentsPage"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.AccommodationsPage"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.LogisticsPage"
            android:theme="@style/Theme.WanderSync" />
        <activity
            android:name=".views.TravelCommunityPage"
            android:theme="@style/Theme.WanderSync" />
    </application>
</manifest>